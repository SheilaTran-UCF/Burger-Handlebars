{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}

<!--create container -->
<div class="container">

<div class="jumbotron">
        <h1 id="color-override">love Burger</h1>
        <p id="color-override">Make burgers, enjoy burgers.</p>
        <br>

        <h2 id="color-override">Choose Your Burger</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger" id="color-override">Enter your new Burger:</label>
                    <input type="text" id="newburger" name="burger">

                    {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
                    <button type="submit" class="btn btn-success" id="addburger"><span class="fa fa-th-list"></span></button>
                </div>
            </form>
        </panel>

    </div><!-- /jumbotron -->
    <div class="row">

        <div class="col-sm-6">
            <img src="/assets/images/images2.jpg" width="100%">

        </div>

        <!-- Undevoured Burgers -->
        <div class="col-sm-6">
            <div class="row">
            <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftheading"><strong>Got Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                         {{#each burgers}}
                            {{#unless devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="eatburger btn btn-warning" id ="devouredbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-wpbeginner"></span></button>
                                <hr>
                            {{/unless}}
                        {{/each}}
                    </ul>
               </div>
            </div>
            </div>


        <!-- Devoured Burgers -->

        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightheading"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="trashburger btn btn-danger" id ="deletebutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-arrows-alt"></span></button>
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
            </div>
        </div>
        </div>
    </div><!-- /row -->
</div><!-- /container -->